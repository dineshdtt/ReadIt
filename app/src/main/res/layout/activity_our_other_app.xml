<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_other_app"
    tools:context=".activities.OurOtherAppActivity">


    <ImageView
        android:id="@+id/ivOtherApp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:contentDescription="@string/str_content_image"
        android:src="@drawable/txt_other_app" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivOtherApp"
        android:contentDescription="@string/str_content_image"
        android:src="@drawable/ic_coming_soon" />


</RelativeLayout>