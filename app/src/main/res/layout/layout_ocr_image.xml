<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_corner_white_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvImgOcr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:maxLines="10"
        android:padding="5dp"
        android:textColor="@color/warm_grey1"
        android:textSize="12sp" />

    <View
        android:id="@+id/view101"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tvImgOcr"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/grey6" />


    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view101"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivReload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/bg_black_ring"
            android:contentDescription="@string/str_reload"
            android:padding="5dp"
            android:src="@drawable/ripple_reload" />

        <ImageView
            android:id="@+id/ivSpeak"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:contentDescription="@string/str_speak"
            android:padding="3dp"
            android:src="@drawable/ripple_speak" />

    </LinearLayout>

</RelativeLayout>